<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/your_feed_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/channels_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/et_rss_address"
        android:layout_below="@+id/your_feed_title" />

    <TextView
        android:layout_below="@+id/et_rss_address"
        android:id="@+id/your_feed_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Your Feed" />

    <Button
        android:id="@+id/btn_show_input_views"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/add_new"
        />

</RelativeLayout>